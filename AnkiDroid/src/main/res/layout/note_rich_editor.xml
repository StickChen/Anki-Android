<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
                android:id="@+id/note_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_alignParentStart="true"
                android:imeOptions="actionDone|flagNoEnterAction"
                android:inputType="textAutoCorrect|textCapSentences"
                android:maxLines="1" android:layout_margin="0dp" />

        <ScrollView
                android:id="@+id/rte_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="600sp"
                android:layout_above="@id/rte_toolbar_container"
                android:layout_below="@id/note_front"
                android:layout_margin="2dp"
                android:fillViewport="true"
                android:background="@null"
                android:scrollbarStyle="insideOverlay">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                <com.onegravity.rteditor.RTEditText
                        android:id="@+id/note_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:background="@null"
                        android:imeOptions="actionDone|flagNoEnterAction"
                        android:inputType="textMultiLine|textAutoCorrect|textCapSentences" />

            </LinearLayout>

        </ScrollView>
        <include
            android:id="@+id/rte_toolbar_container"
            layout="@layout/rte_toolbar"/>

</RelativeLayout>
